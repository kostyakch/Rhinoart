= render 'rhinoart/shared/error_messages', object: f.object
.form-horizontal
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'span11'
  .control-group
    = f.label :value, class: 'control-label'
    .controls
      = f.text_area :value, class: 'span11', rows: 6
  .control-group
    = f.label :descr, class: 'control-label'
    .controls
      = f.text_area :descr, class: 'span11', rows: 2
  .form-actions
    .btn-overlay
      = f.button t("_BTN_SAVE"), class: "btn btn-primary"
      = f.button t('_BTN_SAVE_AND_CONTINUE'), class: 'btn btn-success', name: 'continue', value: 'continue'
      = link_to t("_BTN_CANCEL"), settings_path, class: "btn"
