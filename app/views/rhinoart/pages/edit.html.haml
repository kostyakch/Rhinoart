- provide(:title, "#{t(:_EDIT)}: #{@page.name}")
- content_for :sidebar_l2 do
  #sidebar-left2.span3
    .nav-collapse.sidebar-nav
      %ul.nav.nav-tabs.nav-stacked
        - page_tree.each do |p|
          = render 'rhinoart/pages/rows', p: p, level: 0
- content_for :javascript do
  :javascript
    <!--
    	#{raw(field_javascript)}
    	#{raw(tab_javascript)}
    -->
= form_for @page, :url => page_path, :html => { :multipart => true } do |f|
  %legend= "#{t(:_EDIT)}: #{@page.name}"
  = render 'fields', f: f
= render 'rhinoart/page_fields/form', page: @page
