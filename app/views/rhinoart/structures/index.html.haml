.box-header{"data-original-title" => ""}
  %h2
    %i.halflings-icon.align-justify
    %span.break
    = t(:_SITE_STRUCTURE)
  .box-icon
    %a.btn-setting{href: "#"}
      %i.halflings-icon.wrench
    %a.btn-minimize{href: "#"}
      %i.halflings-icon.chevron-up
    %a.btn-close{href: "#"}
      %i.halflings-icon.remove
.box-content
  #DataTables_Table_0_wrapper.dataTables_wrapper{role: "grid"}
    .row-fluid
      .btn-overlay
        = link_to "<i class=\"halflings-icon plus\"></i> #{t(:_BTN_CREATE)}".html_safe, new_structure_path, class: 'btn btn-primary'
    %table.table.table-striped.tree
      %thead
        %tr
          %th{width: "70%"}= t(:Page)
          %th{width: "20%"}= t(:_STATUS)
          %th= t(:_ACTIONS)
      %tbody
        - page_items.each do |p|
          = render 'rows', p: p, level: 0
    .row-fluid
      /
        div class="span12">
        <div class="dataTables_info" id="DataTables_Table_0_info">Showing 1 to 10 of 32 entries</div>
        </div
      .span12.center
        .dataTables_paginate.paging_bootstrap.pagination= will_paginate page_items
