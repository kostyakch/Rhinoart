= form_for @user, {html: {class: 'form-horizontal'}} do |f|
	= render 'rhinoart/shared/error_messages', object: f.object
	= hidden_field_tag :redirect_to, params[:redirect_to] if params[:redirect_to].present?

	.control-group
		= f.label :email, class: 'control-label'
		.controls
			= f.email_field :email, required: true

	.control-group
		= f.label :name, class: 'control-label'
		.controls
			= f.text_field :name


	.control-group
		= f.label :password, class: 'control-label'
		.controls
			= f.password_field :password
			%small.help-inline
				8+ characters

	- if can? :manage, :user_roles
		.control-group
			= f.label :admin_role, class: 'control-label'
			.controls
				- Rhinoart::User::ADMIN_PANEL_ROLES.each do |ar| 
					= f.fields_for :roles do |ff| 
						= label_tag ar do			
							= check_box_tag "user[admin_roles][]", ar, @user.has_role?(ar) ? true : nil
							= ar

	- if can? :manage, :users
		.control-group
			= f.label :frontend_role, class: 'control-label'
			.controls
				- Rhinoart::User::FRONTEND_ROLES.each do |ar| 
					= f.fields_for :roles do |ff| 
						= label_tag ar do			
							= check_box_tag "user[frontend_roles][]", ar, @user.has_role?(ar) ? true : nil
							= ar

	.control-group
		= f.label :approved, class: 'control-label'
		.controls
			= f.check_box :approved

	- if I18n.available_locales.count > 1
		.control-group
			= f.label :locales, class: "control-label"
			.controls
				= f.select :locales, I18n.available_locales, {}, { :multiple => true, :size => 4 }


	.form-actions
		= f.submit 'Save', class: 'btn btn-primary', data: { disable_with: 'Saving...'}
		- if f.object.persisted?
			%span.muted or
			= link_to 'Clear all access rights', [f.object], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'


