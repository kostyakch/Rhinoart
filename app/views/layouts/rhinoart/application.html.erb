<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	<%= stylesheet_link_tag "rhinoart/application", :media => "all" %>
    <%= appended_stylesheets %>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800&subset=latin,cyrillic-ext,latin-ext' rel='stylesheet' type='text/css' />
	
	<meta name="generator" content="RhinoArtCMS <%#= sys_version %>">
	<%= csrf_meta_tags %>
 
    <%= render 'layouts/rhinoart/shim' %>    
</head>

<body>
	<%= render 'layouts/rhinoart/header' %>

<div class="container-fluid">
	<div class="row-fluid">
		<%= render 'layouts/rhinoart/sidebar' %>		

		<%= yield :sidebar_l2 %>

		<div id="content" class="<%= (yield :sidebar_l2).present? ? 'span8' : 'span11' %>" style="min-height: 521px;"> 
			<%= render 'rhinoart/shared/flash_messages' %>  
		
			<div class="row-fluid"><%= yield %> </div>
		</div>
	</div>

	<%= render 'layouts/rhinoart/footer' %>
</div>



<%= javascript_include_tag "rhinoart/application" %>
<%= appended_javascripts %>
<%= raw yield(:javascript) %>

<% if Rails.env.development? %>
<div class="container">
	<div class="row-fluid">
		<%= debug(params) %>
	</div>
</div>
<% end %>

</body>
</html>