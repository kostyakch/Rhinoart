!!! 5
%html
  %head>
    %title=@page.title
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    - if description = @page.field('description')
      %meta{:name => 'description', :content => description}
    - if keywords = @page.field('keywords')
      %meta{:name => 'keywords', :content => keywords}
    = Rhinoart::Setting.get('head_tags')
  %body
    = Rhinoart::Setting.get('analytics_code')
    #wrapper
      %section#main
        .container-block
          %article.container-fluid
            .content-block.row
              .col-md-12
                = yield
